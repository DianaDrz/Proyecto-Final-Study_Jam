<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.diana_gdgandroidbolivia.proyecto_final_study_jam.MainActivity"
    android:background="@drawable/d">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1">
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido a GuitarBasic"
                    android:gravity="center_horizontal"
                    android:textSize="28dp"
                    android:textColor="#f1111112"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="193dp"
                        android:src="@drawable/logo"
                        android:layout_gravity="center_horizontal"
                        />
                    <Button
                        android:id="@+id/boton1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/p1"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/boton"
                        android:layout_marginTop="50dp"
                        android:onClick="accion"
                        />
                    <Button
                        android:id="@+id/boton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/p2"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:background="@drawable/boton"
                        android:onClick="accion1"

                        />
                    <Button
                        android:id="@+id/boton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/p3"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:background="@drawable/boton"
                        android:onClick="accion2"

                        />
                    <Button
                        android:id="@+id/boton4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/p4"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:background="@drawable/boton"
                        android:onClick="accion3"

                        />
                    <Button
                        android:id="@+id/boton6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/p5"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:background="@drawable/boton"
                        android:onClick="accion4"

                        />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</RelativeLayout>
